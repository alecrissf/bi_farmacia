datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Authentication Models

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  permissions   Int
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// Pharmacy Models

model CategoriaProduto {
  id        Int        @id @default(autoincrement())
  nome      String     @db.VarChar(30)
  produtos  Produto[]
  promocoes Promocao[]

  @@unique([nome])
  @@map("categoria_produto")
}

model MarcaProduto {
  id        Int        @id @default(autoincrement())
  nome      String     @db.VarChar(30)
  produtos  Produto[]
  promocoes Promocao[]

  @@unique([nome])
  @@map("marca_produto")
}

model Produto {
  id          Int              @id @default(autoincrement())
  codBarras   String           @map("codbarras") @db.VarChar(50)
  nome        String           @db.VarChar(100)
  preco       Decimal
  qtdEstoque  Int              @map("qtd_estoque")
  categoriaId Int              @map("id_categoria")
  categoria   CategoriaProduto @relation(fields: [categoriaId], references: [id], onDelete: Cascade)
  marcaId     Int              @map("id_marca")
  marca       MarcaProduto     @relation(fields: [marcaId], references: [id], onDelete: Cascade)
  lotes       Lote[]
  pedidos     Pedido[]
  promocoes   Promocao[]

  @@unique([codBarras])
  @@map("produto")
}

model Lote {
  id              Int      @id @default(autoincrement())
  codigo          String   @db.VarChar(100)
  produtoId       Int      @map("id_produto")
  produto         Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  dataValidade    DateTime @map("data_validade")
  dataRecebimento DateTime @map("data_recebimento")
  qtdOriginal     Int      @map("qtd_original")

  @@unique([codigo])
  @@map("lote")
}

model Cliente {
  id        Int        @id @default(autoincrement())
  cpf       String     @db.VarChar(14)
  nome      String     @db.VarChar(50)
  vendas    Venda[]
  enderecos Endereco[]

  @@unique([cpf])
  @@map("cliente")
}

model Endereco {
  id          Int     @id @default(autoincrement())
  cidade      String  @db.VarChar(30)
  bairro      String  @db.VarChar(30)
  rua         String  @db.VarChar(60)
  numero      Int
  complemento String  @db.VarChar(20)
  clienteId   Int     @map("id_cliente")
  cliente     Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("endereco")
}

model TipoPagamento {
  id        Int     @id @default(autoincrement())
  descricao String  @db.VarChar(50)
  vendas    Venda[]

  @@unique([descricao])
  @@map("tipo_pagamento")
}

model Venda {
  id                  Int                @id @default(autoincrement())
  dataVenda           DateTime           @map("data_venda")
  clienteId           Int                @map("id_cliente")
  cliente             Cliente            @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  tipoPagamentoId     Int                @map("id_tipoPagamento")
  tipoPagamento       TipoPagamento      @relation(fields: [tipoPagamentoId], references: [id], onDelete: Cascade)
  pedidos             Pedido[]
  campanhaMarketingId Int?               @map("id_campanhaMarketing")
  campanhaMarketing   CampanhaMarketing? @relation(fields: [campanhaMarketingId], references: [id], onDelete: SetNull)

  @@map("venda")
}

model Pedido {
  id         Int       @id @default(autoincrement())
  qtd        Int
  vendaId    Int       @map("id_venda")
  venda      Venda     @relation(fields: [vendaId], references: [id], onDelete: Cascade)
  produtoId  Int       @map("id_produto")
  produto    Produto   @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  promocaoId Int?      @map("id_promocao")
  promocao   Promocao? @relation(fields: [promocaoId], references: [id], onDelete: Cascade)

  @@map("pedido")
}

enum TipoPromocao {
  Percentual
  Fixo
}

model Promocao {
  id                   Int                @id @default(autoincrement())
  nome                 String             @db.VarChar(100)
  dataInicio           DateTime           @map("data_inicio")
  dataFim              DateTime           @map("data_fim")
  tipo                 TipoPromocao
  desconto             Decimal
  pedidos              Pedido[]
  produtosAplicaveis   Produto[]
  categoriasAplicaveis CategoriaProduto[]
  marcasAplicaveis     MarcaProduto[]

  @@unique([nome])
  @@map("promocao")
}

model CampanhaMarketing {
  id         Int      @id @default(autoincrement())
  nome       String   @db.VarChar(100)
  dataInicio DateTime @map("data_inicio")
  dataFim    DateTime @map("data_fim")
  tipo       String   @db.VarChar(50)
  vendas     Venda[]

  @@unique([nome])
  @@map("campanha_marketing")
}
